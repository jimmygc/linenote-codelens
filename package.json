{
	"name": "linenote-codelens",
	"repository": "https://github.com/jimmygc/linenote-codelens.git",
	"displayName": "Note Line in Codelens",
	"description": "note line in codelens",
	"version": "0.0.4",
	"publisher": "jimmygc",
	"engines": {
		"vscode": "^1.26.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
        "views": {
            "explorer": [
              {
                "id": "LinenoteExplorer",
                "name": "Linenote Explorer",
                "icon": "$(notebook)",
                "contextualTitle": "Linenote Explorer"
              }
            ]
        },
		"commands": [
			{
				"command": "linenotecodelens.openNote",
				"title": "LineNote: Open note",
                "icon": "$(edit)"
			},
			{
				"command": "linenotecodelens.removeNote",
				"title": "LineNote: Delete note",
                "icon": "$(close)"
			},
			{
				"command": "linenotecodelens.moveSingleNote",
				"title": "LineNote: Move single note",
                "icon": "$(gear)"
			},
			{
				"command": "linenotecodelens.moveNoteAndSubsequential",
				"title": "LineNote: Move all notes under",
                "icon": "$(arrow-down)"
			},
			{
				"command": "linenotecodelens.treeview_refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			}
		],
		"menus": {
            "view/title": [
                {
                    "command": "linenotecodelens.treeview_refresh",
                    "when": "view == LinenoteExplorer",
                    "group": "navigation@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "linenotecodelens.removeNote",
                    "when": "view == LinenoteExplorer && viewItem == note",
                    "group": "inline@4"
                },
                {
                    "command": "linenotecodelens.moveNoteAndSubsequential",
                    "when": "view == LinenoteExplorer && viewItem == note",
                    "group": "inline@3"
                },
                {
                    "command": "linenotecodelens.moveSingleNote",
                    "when": "view == LinenoteExplorer && viewItem == note",
                    "group": "inline@2"
                },
                {
                    "command": "linenotecodelens.openNote",
                    "when": "view == LinenoteExplorer && viewItem == note",
                    "group": "inline@1"
                }
            ],
			"editor/context": [
				{
					"command": "linenotecodelens.openNote",
					"group": "linenote@1"
				},
				{
					"command": "linenotecodelens.removeNote",
					"group": "linenote@2"
				},
				{
					"command": "linenotecodelens.moveSingleNote",
					"group": "linenote@4"
				},
				{
					"command": "linenotecodelens.moveNoteAndSubsequential",
					"group": "linenote@3"
				}
			]
		},
		"configuration": {
			"properties": {}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"tslint": "^5.8.0",
		"typescript": "^4.2.2",
		"vscode": "^0.9.9"
	},
	"dependencies": {
		"sqlite": "^4.0.23",
		"sqlite3": "^5.0.2"
	}
}
